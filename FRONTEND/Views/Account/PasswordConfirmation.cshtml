@model IDENTITY.Models.ViewModels.UserRegisterViewModel

@{
    ViewData["Title"] = "Register"; Layout = "~/Views/Shared/_Account.cshtml";
}

@section CSS{
    <link href="~/css/mim-authorization-pages.css" rel="stylesheet" type="text/css" />
}

@if (ViewBag.MIMMobile != null)
{
    <div class="row justify-content-center account-form">
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-2 umar-account-form-border">
            <form method="post" action="~/Account/PasswordConfirmation">
                <a href="~/" title="UMARZONE">
                    <img src="~/img/my-interior-mart-logo.png" class="logo" />
                </a>
                <h1>REGISTER</h1>
                <!-- Begin: Hidden fields -->
                <span asp-validation-summary="All" class="umar-error"></span>
                <!-- End: -->
                <h6>Username: <span class="ml-1">@ViewBag.MIMMobile</span></h6>
                <input asp-for="Mobile" hidden value="@ViewBag.MIMMobile" class="umar-input" placeholder="@ViewBag.MIMMobile" />
                <input asp-for="Email" class="umar-input" placeholder="Email Optional" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
                <input asp-for="Password" class="umar-input" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="ConfirmPassword" class="umar-input" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="submit">Register</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="row justify-content-center account-form">
        <div class="col-12 col-sm-12 col-md-4 col-lg-4 col-xl-2 umar-account-form-border">
            <h1>Please verify your mobile to register.</h1>
            <a href="~/Account/Register">Register Here</a>
        </div>
    </div>
}




