@model BOL.LISTING.Profile

@{
    ViewData["Title"] = "Add Profile";
    Layout = "~/Views/Shared/Dashboard/_UserDashboard.cshtml";
}

@{
    ViewData["BC-1"] = "Subscriptions";
    ViewData["BC-2"] = "Listing";
    ViewData["BC-3"] = ViewData["Title"];
    ViewData["BT-Text"] = "Cancel";
    ViewData["BT-Link"] = "/Profile/Index";
}
<!-- End: -->

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-2" style="padding-left:0px; margin-left:0px;">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Company
                    <span class="badge badge-success badge-pill">1</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Communication
                    <span class="badge badge-success badge-pill">2</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Payment Details
                    <span class="badge badge-secondary badge-pill">4</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Working Hours
                    <span class="badge badge-secondary badge-pill">5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Specialisation
                    <span class="badge badge-secondary badge-pill">6</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Address
                    <span class="badge badge-secondary badge-pill">7</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Categories
                    <span class="badge badge-secondary badge-pill">8</span>
                </li>
            </ul>
        </div>

        <div class="col-lg-10">

            <form asp-action="Create" class="parsley-style-1" id="selectForm2" name="selectForm2">
                <div class="row">
                    <div class="col-lg-12">
                        <h4>@ViewData["Title"] @ViewBag.ListingID</h4>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Begin: Hidden -->
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="ListingID" value="@ViewBag.ListingID" />
                                <input type="hidden" asp-for="OwnerGuid" value="none" />
                                <input type="hidden" asp-for="IPAddress" value="none" />
                                <span asp-validation-for="ListingID" class="text-danger"></span>
                                <span asp-validation-for="OwnerGuid" class="text-danger"></span>
                                <span asp-validation-for="IPAddress" class="text-danger"></span>
                                <!-- End:-->
                                <div class="form-group">
                                    <textarea asp-for="ProfileDetails" class="form-control" rows="10"></textarea>
                                    <span asp-validation-for="ProfileDetails" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <input type="submit" value="Save & Continue" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>