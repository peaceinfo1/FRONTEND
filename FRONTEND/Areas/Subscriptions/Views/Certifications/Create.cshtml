@model BOL.LISTING.Certification

@{
    ViewData["Title"] = "Add Certifications";
    Layout = "~/Views/Shared/Dashboard/_UserDashboard.cshtml";
}<!-- Begin: Breadcrumb -->
@{
    ViewData["BC-1"] = "Subscriptions";
    ViewData["BC-2"] = "Listing";
    ViewData["BC-3"] = ViewData["Title"];
    ViewData["BT-Text"] = "View All Listings";
    ViewData["BT-Link"] = "/Communications/Index";
}
<!-- End: -->

<form asp-action="Create" class="parsley-style-1" id="selectForm2" name="selectForm2">
    <div class="row">
        <div class="col-lg-12">
            <h4>@ViewData["Title"] @ViewBag.ListingID</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <!-- Begin: Hidden -->
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ListingID" value="@ViewBag.ListingID" />
                    <input type="hidden" asp-for="OwnerGuid" value="none" />
                    <input type="hidden" asp-for="IPAddress" value="none" />
                    <span asp-validation-for="ListingID" class="text-danger"></span>
                    <span asp-validation-for="OwnerGuid" class="text-danger"></span>
                    <span asp-validation-for="IPAddress" class="text-danger"></span>
                    <!-- End:-->

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="GST" /> @Html.DisplayNameFor(model => model.GST)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ISOCertified" /> @Html.DisplayNameFor(model => model.ISOCertified)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="CompanyPanCard" /> @Html.DisplayNameFor(model => model.CompanyPanCard)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ROCCertification" /> @Html.DisplayNameFor(model => model.ROCCertification)
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="GomastaLicense" /> @Html.DisplayNameFor(model => model.GomastaLicense)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="AcceptTenderWork" /> @Html.DisplayNameFor(model => model.AcceptTenderWork)
                        </label>
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save & Continue" class="btn btn-primary" />
                <a href="~/Subscriptions/Profiles/Create" class="btn btn-secondary" title="Skip">Skip</a>
            </div>
        </div>
    </div>
</form>