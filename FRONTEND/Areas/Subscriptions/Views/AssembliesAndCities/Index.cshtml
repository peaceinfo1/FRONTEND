@model IEnumerable<BOL.LISTING.AssembliesAndCities>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Dashboard/_UserDashboard.cshtml";
}

<!-- Begin: Breadcrumb -->
@{
    ViewData["BC-1"] = "Subscriptions";
    ViewData["BC-2"] = "Listings";
    ViewData["BC-3"] = ViewData["Title"];
    ViewData["BT-Text"] = "Add New Listing";
    ViewData["BT-Link"] = "/Subscriptions/Listings/Create";
    ViewData["BT-Text2"] = "Manage Listings";
    ViewData["BT-Link2"] = "/Subscriptions/Listings/Index";
}
<!-- End: -->

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerGuid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IPAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityIDs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssemblyIDs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ListingID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerGuid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IPAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountryID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StateID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityIDs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssemblyIDs)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AssemblyAndCityID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AssemblyAndCityID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AssemblyAndCityID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
